# =================================================================
# WAF Training WordPress Environment Configuration
# =================================================================
# Copy this file to .env and customize as needed
# =================================================================

# -------------------------
# WordPress Configuration
# -------------------------
WORDPRESS_VERSION=latest
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress_password_change_me
WORDPRESS_TABLE_PREFIX=wp_

# WordPress admin account
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=Admin@SecurePass123
WORDPRESS_ADMIN_EMAIL=admin@example.com

# Site configuration
WORDPRESS_SITE_TITLE=Summit Outfitters
WORDPRESS_SITE_URL=http://localhost:8080
WORDPRESS_SITE_TAGLINE=Premium Outdoor Gear & Equipment

# -------------------------
# MySQL Configuration
# -------------------------
MYSQL_VERSION=8.0
MYSQL_ROOT_PASSWORD=root_password_change_me
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress_password_change_me

# -------------------------
# Server Configuration
# -------------------------
LISTEN_IP=0.0.0.0
LISTEN_PORT=8080

# PHP Configuration
PHP_MEMORY_LIMIT=512M
PHP_MAX_UPLOAD_SIZE=64M
PHP_MAX_EXECUTION_TIME=300
PHP_POST_MAX_SIZE=64M

# -------------------------
# WooCommerce Configuration
# -------------------------
STORE_ADDRESS=1234 Mountain View Drive
STORE_ADDRESS_2=Suite 100
STORE_CITY=Denver
STORE_POSTCODE=80202
STORE_COUNTRY=US
STORE_STATE=CO
STORE_CURRENCY=USD

# -------------------------
# Data Generation Settings
# -------------------------
# Number of products to create
NUM_PRODUCTS=250

# Number of orders to generate
NUM_ORDERS=75

# Number of customer accounts
NUM_CUSTOMERS=15

# Number of blog posts
NUM_POSTS=20

# Number of product reviews
NUM_REVIEWS=40

# -------------------------
# Automation Settings
# -------------------------
# Auto-start setup on first run (true/false)
AUTO_SETUP=true

# Skip product image downloads (faster setup, placeholder images)
SKIP_IMAGE_DOWNLOAD=false

# Generate sample orders with fake data
GENERATE_SAMPLE_ORDERS=true

# -------------------------
# Debug Settings
# -------------------------
WORDPRESS_DEBUG=false
WORDPRESS_DEBUG_LOG=false
WORDPRESS_DEBUG_DISPLAY=false
SCRIPT_DEBUG=false

# Verbose setup output
VERBOSE_SETUP=true
