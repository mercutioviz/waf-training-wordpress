# TechGear Pro Environment Configuration
# Copy this file to .env and customize as needed

# Database Configuration
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress_pass
MYSQL_ROOT_PASSWORD=root_pass

# WordPress Configuration
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress_pass
WORDPRESS_TABLE_PREFIX=wp_

# WordPress Debug (set to 0 in production)
WORDPRESS_DEBUG=1
WORDPRESS_DEBUG_LOG=true
WORDPRESS_DEBUG_DISPLAY=false

# Site Configuration
WORDPRESS_SITE_URL=http://localhost:8080
WORDPRESS_SITE_TITLE=TechGear Pro
WORDPRESS_ADMIN_EMAIL=admin@techgearpro.local

# Ports (change if ports are already in use)
NGINX_PORT=8080
PHPMYADMIN_PORT=8081

# WooCommerce Configuration
WOOCOMMERCE_STORE_ADDRESS=123 Tech Street
WOOCOMMERCE_STORE_CITY=San Francisco
WOOCOMMERCE_STORE_POSTCODE=94102
WOOCOMMERCE_COUNTRY=US:CA
WOOCOMMERCE_CURRENCY=USD

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
PHP_MAX_EXECUTION_TIME=300

# Optional: External WAF Configuration
# WAF_ENDPOINT=http://your-waf:80
# WAF_HEADER_NAME=X-WAF-Token
# WAF_HEADER_VALUE=your-secret-token
